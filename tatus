[32m+[m[32m            return '–î–µ–Ω–µ–≥ –Ω–µ—Ç, –¥–µ—Ä–∂–∏—Å—å'[m
[32m+[m[32m        elif self.limit > self.get_today_stats():[m
[32m+[m[32m            if currency == 'usd':[m
[32m+[m[32m                cash_remain = (self.limit[m
[32m+[m[32m                               - self.get_today_stats()) / self.USD_RATE[m
